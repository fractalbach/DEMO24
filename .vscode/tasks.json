{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-lSDL3",
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${workspaceFolder}/chris24/src/main_other.cpp",
				"-o",
				"${workspaceFolder}/out/demo.app"
			],
			"options": {
				"cwd": "${workspaceFolder}/out"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}